{
	"name": "library-api",
	"version": "0.0.1",
	"description": "A side-project of mine, just a simple Nest API to manage a library :)",
	"engines": {
		"node": "18"
	},
	"author": {
		"name": "Pietro Piva Vieira",
		"email": "pietro.developer@gmail.com"
	},
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"prestart:dev": "prisma generate && prisma migrate dev",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"prestart:prod": "prisma generate && prisma migrate deploy",
		"start:prod": "node dist/main",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
		"test:install-prisma-environment": "npm link vitest-environment-prisma",
		"pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts --dir src/infrastructure/http/controllers"
	},
	"dependencies": {
		"@nestjs/common": "10.1.3",
		"@nestjs/core": "10.1.3",
		"@nestjs/platform-fastify": "10.1.3",
		"@nestjs/swagger": "7.1.6",
		"@prisma/client": "5.1.0",
		"@react-email/heading": "0.0.8",
		"@react-email/hr": "0.0.5",
		"@react-email/html": "0.0.4",
		"@react-email/render": "0.0.7",
		"@react-email/text": "0.0.5",
		"dotenv": "16.3.1",
		"nestjs-zod": "2.3.3",
		"react": "18.2.0",
		"react-email": "1.9.4",
		"reflect-metadata": "0.1.13",
		"resend": "0.17.2",
		"rimraf": "5.0.1",
		"rxjs": "7.8.1",
		"zod": "3.21.4"
	},
	"devDependencies": {
		"@faker-js/faker": "8.0.2",
		"@fastify/static": "6.10.2",
		"@nestjs/cli": "10.1.11",
		"@nestjs/schematics": "10.0.1",
		"@nestjs/testing": "10.1.3",
		"@swc/cli": "0.1.62",
		"@swc/core": "1.3.73",
		"@types/node": "20.4.5",
		"@types/react": "18.2.18",
		"@types/supertest": "2.0.12",
		"@typescript-eslint/eslint-plugin": "6.2.1",
		"@typescript-eslint/parser": "6.2.1",
		"@vitest/coverage-c8": "0.33.0",
		"eslint": "8.46.0",
		"eslint-config-prettier": "8.9.0",
		"eslint-plugin-prettier": "5.0.0",
		"npm-run-all": "4.1.5",
		"prettier": "3.0.0",
		"prisma": "5.1.0",
		"source-map-support": "0.5.21",
		"supertest": "6.3.3",
		"ts-loader": "9.4.4",
		"ts-node": "10.9.1",
		"typescript": "5.1.6",
		"unplugin-swc": "1.3.2",
		"vite-tsconfig-paths": "4.2.0",
		"vitest": "0.34.1"
	}
}
